{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: gcc build active file",
      "command": "/usr/bin/gcc",
      "args": [
        "-fdiagnostics-color=always",
        "-g",

        "-Wall",
        "-Wextra",
        "-pedantic",
        "-Werror",
        "-std=gnu89",

        "${fileDirname}/util-*.c",
        "${fileDirname}/main.c",
        "${fileDirname}/builtins-*.c",
        "${fileDirname}/bool_opts-*.c",

        "-o",
        "${fileDirname}/hsh"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    }
  ],
  "version": "2.0.0"
}